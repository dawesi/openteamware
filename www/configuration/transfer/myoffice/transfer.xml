<?xml version="1.0" encoding="UTF-8"?>
<transfer xsi:noNamespaceSchemaLocation="/transfer/resources/xsd/transfer.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!-- 
	This section defines how Objects
	are cached in this system.
	
	It does not need to be set, as there are
	default settings for caching.
	 -->
	<objectCache>
		<defaultcache>
			<scope type="instance"/>
		</defaultcache>
	</objectCache>
	<objectDefinitions>
		<package name="followups">
			<object name="followup" table="followups">
				<id name="entrykey" type="UUID" column="entrykey" />
				<property name="done" type="numeric" column="done" />
				<property name="dt_due" type="date" column="dt_due" />
				<property name="comment" type="string" column="comment" />
				<property name="subject" type="string" />
				<property name="userkey" type="string" />
				<property name="servicekey" type="string" />
				<property name="objectkey" type="string" />
				<property name="objecttitle" type="string" />
				<property name="createdbyuserkey" type="string" />
				<property name="dt_created" type="date" />
				<property name="alert_email" type="numeric" />
				<property name="categories" type="string" />
				<property name="priority" type="numeric" />
				<property name="followuptype" type="numeric" />
			</object>			
		</package>
		<package name="Filters">
			<!-- CRM filter ... -->
		</package>
		<package name="ProductAdministration">
		  	<!-- Product groups -->
	  		<object name="ProductGroups" table="productgroups">
	  			<id name="entrykey" type="UUID"/>
	  			<property name="companykey" type="string" column="companykey"/>
	  			<property name="productgroupname" type="string" column="productgroupname"/>
	  			<property name="dt_created" type="date" column="dt_created"/>
	  			<property name="createdbyuserkey" type="string" column="createdbyuserkey"/>
	  			<property name="description" type="string" column="description"/>
	  			<property name="parentproductgroupentrykey" type="string" column="parentproductgroupentrykey"/>
	  			<property name="category1" type="string" column="category1"/>
	  			<property name="category2" type="string" column="category2"/>
	  			<property name="lasteditedbyuserkey" type="string" column="lasteditedbyuserkey"/>
	  		</object>
	  	</package>
	  	<package name="Extensions">
	  		<!-- Recording of travelling km -->
	  		<object name="TravellingKilometers" table="travellingkilometers">
	  			<id name="entrykey" type="UUID"/>
	  			<property name="createdbyuserkey" type="string" column="createdbyuserkey"/>
	  			<property name="dt_added" type="date" column="dt_added"/>
	  			<property name="kilometers" type="numeric" column="kilometers"/>
	  		</object>
	  	</package>
		<package name="Messaging">
			<object name="EmailAttachment" table="emailattachments">
				<id name="id" type="numeric" />
				<property name="username" type="string" />
				<property name="foldername" type="string" />
				<property name="uid" type="numeric" />
				<property name="filename" type="string" />
				<property name="contenttype" type="string" />
				<property name="messageid" type="string" />
				<property name="filepath" type="string" />
			</object>
		</package>
	</objectDefinitions>
</transfer>